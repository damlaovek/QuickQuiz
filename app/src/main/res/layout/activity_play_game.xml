<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.damla.quickquiz.PlayGameActivity">

    <TextView
        android:text="Science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/science"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:paddingBottom="20sp"
        android:paddingEnd="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingStart="20sp"
        android:paddingTop="20sp" />

    <TextView
        android:text="Art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/art"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingBottom="20sp"
        android:paddingEnd="20sp"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:paddingStart="20sp"
        android:paddingTop="20sp"
        android:padding="20sp" />

    <TextView
        android:text="Sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sport"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:padding="20sp"
        android:textAlignment="textEnd" />

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/science500"
        android:layout_alignLeft="@+id/science500"
        android:layout_alignStart="@+id/science500"
        android:layout_marginTop="21dp"
        android:id="@+id/science400"
        android:textAlignment="center"
        android:textSize="36sp"
        android:tag="science" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/science300"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_below="@+id/science400"
        android:layout_alignLeft="@+id/science400"
        android:layout_alignStart="@+id/science400"
        android:layout_marginTop="18dp"
        android:tag="science" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/science200"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_below="@+id/science300"
        android:layout_alignLeft="@+id/science300"
        android:layout_alignStart="@+id/science300"
        android:tag="science" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/science500"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_below="@+id/science"
        android:layout_alignRight="@+id/science"
        android:layout_alignEnd="@+id/science"
        android:tag="science" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/science100"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_below="@+id/science200"
        android:layout_alignLeft="@+id/science200"
        android:layout_alignStart="@+id/science200"
        android:layout_marginTop="19dp"
        android:tag="science" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/science400"
        android:layout_alignLeft="@+id/art"
        android:layout_alignStart="@+id/art"
        android:id="@+id/art500"
        android:textSize="36sp"
        android:textAlignment="center" />

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/science400"
        android:layout_alignLeft="@+id/art500"
        android:layout_alignStart="@+id/art500"
        android:id="@+id/art400"
        android:textSize="36sp"
        android:textAlignment="center" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/science200"
        android:layout_alignLeft="@+id/art400"
        android:layout_alignStart="@+id/art400"
        android:id="@+id/art300"
        android:textSize="36sp"
        android:textAlignment="center" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/science200"
        android:layout_alignRight="@+id/art300"
        android:layout_alignEnd="@+id/art300"
        android:id="@+id/art200"
        android:textSize="36sp"
        android:textAlignment="center" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/science100"
        android:layout_alignLeft="@+id/art200"
        android:layout_alignStart="@+id/art200"
        android:id="@+id/art100"
        android:textSize="36sp"
        android:textAlignment="center" />

    <Button
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sport500"
        android:textSize="36sp"
        android:layout_alignBaseline="@+id/art500"
        android:layout_alignBottom="@+id/art500"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <Button
        android:text="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/art400"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sport400"
        android:textAlignment="center"
        android:textSize="36sp" />

    <Button
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/art300"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sport300"
        android:textSize="36sp"
        android:textAlignment="center" />

    <Button
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/art200"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sport200"
        android:textSize="36sp"
        android:textAlignment="center" />

    <Button
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/art100"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sport100"
        android:textSize="36sp"
        android:textAlignment="center" />

</RelativeLayout>
